<odoo>
  <data>

    <template id="report_sale_order_card">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <h2>PRESUPUESTO DE VENTA  
                <span t-field="o.name"/>
              </h2>
              <p>Cliente:
                <span t-field="o.partner_id.name"/>
              </p>
              <p>Fecha de presupuesto:
                <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}' />
              </p>
              <p>Total:
                <span t-field="o.amount_total" t-options='{"widget": "monetary"}' />
              </p>
            </div>
          </t>
        </t>
      </t>
    </template>

  </data>
</odoo>
